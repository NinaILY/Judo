<Window x:Class="Judo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Judo"
        mc:Ignorable="d"
        Title="MainWindow"  MinHeight="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="615*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*" MaxHeight="30"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>
        <Viewbox Margin="5,0,0,0" HorizontalAlignment="Left" Width="92">
            <Button Content="Back" Click="Back_Click" Padding="10 5" Background="#FFBE93EB" BorderBrush="#FFF0CFCF" Height="53" Width="160" FontSize="20"/>
        </Viewbox>
        <Viewbox Margin="0,0,4.6,0" HorizontalAlignment="Right" Grid.Column="1" Width="90">
            <Button Content="Exit" Padding="10 5" Click="Button_Click" Background="#FFB19CF5" BorderBrush="#FFF0CFCF" Width="80"/>
        </Viewbox>
        <Grid x:Name="gr" Grid.ColumnSpan="2" Margin="0,26,-0.4,-0.6" Grid.RowSpan="2"/>
    </Grid>
</Window>
