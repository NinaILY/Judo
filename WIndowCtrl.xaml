<Page x:Class="Judo.WIndowCtrl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Judo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WIndowCtrl">

    <Grid Background="#FFB7E0F6" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="60"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2">
            <Viewbox>
                <Label Content="Окно управления" FontSize="24" VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Center" Foreground="#FF6800FF" />
            </Viewbox>
        </Border>
        <Grid x:Name="grFrame" Grid.ColumnSpan="2" Grid.Row="1"/>
    </Grid>
</Page>
